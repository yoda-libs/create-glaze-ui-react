    "@babel/runtime": "^7.16.7",
    "@hot-loader/react-dom": "^17.0.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.3",
    "concurrently": "^6.2.1",
